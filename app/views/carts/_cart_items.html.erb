<div class="display-block">
  <% if cart_items.present? %>
    <% cart_items.each do |cart_item| %>
      <div class="display-flex">
        <%= image_tag cart_item.product.image, width: 70, height: 70 %>
        <span><%= cart_item.product.image %></span>

        <span><%= cart_item.quantity %></span>
          <%= button_to "Add one",
            cart_add_item_path(:id => cart_item, product_id: cart_item.product),
            method: :post
          %>

          <%= button_to "remove one",
            cart_update_quantity_path(
              :id => cart_item,
              product_id: cart_item.product,
              cart_id: cart_item.cart
            ),
            method: :post
          %>
      </div>
    <% end %>
  <% else %>
    <span>Empty</span>
  <% end %>
</div>